extends assets/components/template.pug
block body
	section(class="page-section-container")
		div(class="page-section-intro-section")
			h1(class="text-uppercase")=page.title
			div(class="page-section-text-divider")
			p=page.description
		div(class="card-section-container")
			each project in projects
				div(class="card")
					div(class="card-body")
						h1=project.title
						h2=project.description
					div(class="card-footer")
						a(href=project.link) Learn more
