extends assets/components/template.pug
block body
	div(class="bread-container")
		div(class="bread-box")
			div
				a(href="/") Home
			div /
			div
				a(href="/tools.html") Tools
	section(class="page-section-container")
		div(class="page-section-intro-section")
			h1(class="text-uppercase")=page.title
			div(class="page-section-text-divider")
			p=page.description
		div(class="card-section-container")
			each tool in tools
				div(class="card")
					div(class="card-body")
						h1=tool.title
						h2=tool.description
					div(class="card-footer")
						a(href=tool.link) Open Tool
