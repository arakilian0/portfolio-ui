div(class="docs-fixed-container" style="display: block !important;")
	div(class="page-section-docs-menu")
		div(style="background: #4b367c;border-top-right-radius: 4px;border-bottom-right-radius: 4px;padding-bottom: 30px;")
			div(class="page-section-docs-menu-title" style="text-transform: uppercase;line-height: 28px;")=docs.title
			each section in docs.menu
				div(class="page-section-docs-menu-dropdown")
					div(class="page-section-docs-menu-dropdown-title" id=section.id)
						i(class="fa fa-caret-right" style="width: 8px;")
						span(unselectable="on" class="unselectable")=section.title
					div(class="page-section-docs-menu-dropdown-items" id=section.submenuId)
						each item in section.submenu
							div(class="page-section-docs-menu-dropdown-item")
								a(href=item.link style="opacity: 0.85")=item.title
